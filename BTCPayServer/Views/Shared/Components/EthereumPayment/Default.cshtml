@using BTCPayServer.Views.Stores
@model BTCPayServer.Ethereum.ViewModels.EthStoreViewModel
@inject BTCPayServer.Ethereum.Config.EthereumOptions EthereumOptions;
@if (EthereumOptions.EthereumConfigs.Any())
{

    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="form-group">
        <h5>Ethereum</h5>
        <span>Ethereum spec</span>
    </div>
    <div class="form-group">
        <table class="table table-sm table-responsive-md">
            <thead>
                <tr>
                    <th>Crypto</th>
                    <th class="text-center">Enabled</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EthPaymentMethodViewModels)
                {
                    <tr>
                        <td>@item.CryptoCode</td>
                        <td class="text-center">
                            @if (item.Enabled)
                            {
                                <span class="fa fa-check"></span>
                            }
                            else
                            {
                                <span class="fa fa-times"></span>
                            }
                        </td>
                        <td class="text-right">
                            <a id="Modify" asp-action="GetEthPaymentMethod" asp-controller="Stores" asp-route-cryptoCode="@item.CryptoCode">Modify</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }


}
