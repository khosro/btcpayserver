@using Microsoft.AspNetCore.Mvc.ModelBinding
@using BTCPayServer.Ethereum.Model

@model EthWalletSendModel
@{
    Layout = "../Shared/_NavLayout.cshtml";
    ViewData["Title"] = "Manage wallet";
    ViewData.SetActivePageAndTitle(WalletsNavPages.Send);
}
@if (Model.Error != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <span>@Model.Error</span><br />
    </div>
}
<form method="post">

    <div class="col-sm-12 col-md-12 col-lg-10  py-2 ">
        <div class="form-group">
            <select asp-for="SelectedAccount" asp-items="Model.Addresses" class="form-control"></select>
            <span asp-validation-for="SelectedAccount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.AddressTo" class="control-label"></label>
            <input asp-for="@Model.AddressTo" class="form-control" />
            <span asp-validation-for="@Model.AddressTo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.AmountInEther" class="control-label"></label>
            <input asp-for="@Model.AmountInEther" class="form-control" />
            <span asp-validation-for="@Model.AmountInEther" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.GasPrice" class="control-label"></label>
            <input asp-for="@Model.GasPrice" class="form-control" />
            <span asp-validation-for="@Model.GasPrice" class="text-danger"></span>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12 text-center">
            <button type="submit" class="btn btn-primary" name="command" value="broadcast">Send it</button>
        </div>
    </div>

</form>
